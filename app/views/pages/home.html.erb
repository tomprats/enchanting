    <div class="col-sm-2 col-sm-offset-5">
      <%= image_tag "logo-small.png", class: "img-responsive" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      Made with <%= link_to "Love", "http://tomprats.com/love", target: :_blank %>
    </div>
  </div>
</div>

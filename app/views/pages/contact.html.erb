<div class="row">
  <div class="col-sm-12">
    <div class="row">
      <div class="col-sm-12">
        <h1 class="text-center">We can't wait to hear from you!</h1>
      </div>
    </div>

    <%= form_tag contact_email_path, remote: true, class: "form-horizontal" do %>
      <div class="form-group">
        <%= label :contact, :name, :Name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field :contact, :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label :contact, :email, :Email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= email_field :contact, :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label :contact, :phone, :Phone, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= phone_field :contact, :phone, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label :contact, :how, "How did you hear about us?", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_area :contact, :how, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= label :contact, :what, "We want to hear it all: When? <br>Where? <br>Color? <br>Budget?".html_safe, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_area :contact, :what, class: "form-control", rows: 6 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8 contact-error"></div>
        <div class="col-sm-2">
          <%= submit_tag "Submit", class: "btn btn-peach pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
